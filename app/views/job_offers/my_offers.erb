<h1>My Job Offers</h1>
<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Description</th>
    <th>Benefits</th>
    <th>Is active</th>
    <th>Reason of finalize</th>
    <th>Actions</th>
  </tr>
  <% @offers.each do | offer| %>
    <tr>
      <td>
        <%= offer.title %>
      </td>
      <td>
        <%= offer.location %>
      </td>
      <td>
        <%= offer.description %>
      </td>   
      <td>
        <%= offer.benefits %>
      </td>
      <td>
        <%= offer.is_active %>
      </td>
      <td>
        <%= offer.reason %>
      </td>
      <td>
        <% if offer.is_active %>
          <%= link_to 'Edit', url_for(:job_offers, :edit, :offer_id => offer.id), :class => "btn btn-primary" %>
          <% form_tag url(:job_offers, :destroy, :offer_id => offer.id), :method => :delete, :style => 'display:inline' do %>
            <button type='submit' title="Delete offer" rel='tooltip' class="btn btn-secondary" >Delete</button>
          <% end %>
          <%= link_to 'Finalize', url_for(:job_offers, :finalize, :offer_id => offer.id), :class => "btn btn-secondary" %>
        <% end %>
      </td> 
    </tr>
  <% end %>

</table>